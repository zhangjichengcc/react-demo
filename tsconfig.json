{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "CommonJs",
    "target": "es5",
    "allowJs": true,
    "sourceMap": true, 
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "config/*": ["config/*"]
    }
  },
  // "files": ["src/app.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "*.json"
  ]
}
